<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/txtViewPesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.51"
        android:background="@color/white"
        android:ems="10"
        android:maxHeight="@dimen/maxTextH"
        android:maxLines="@integer/maxline"
        android:singleLine="false" >

        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/btnSendButton"
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:layout_weight="0.51"
        android:background="@drawable/action_bar_selector"
        android:onClick="kirimPesan"
        android:src="@drawable/social_send_now" />

</LinearLayout>